.limiter
  .container-login100
    .wrap-login100
      .login100-pic.js-tilt(data-tilt='')
        img(src='images/img-01.png' alt='IMG')
      form.login100-form.validate-form(action='/login' method='post')
        
        span.login100-form-title
          | Customer Login
        if validateErr
            each err in displayErr
                .alert.alert-danger
                    h5= err
        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input.input100(type='text' id='email' name='email' placeholder='Email' class='form-control')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Password is required')
          input.input100(type='password' id='password' name='password' placeholder='Password' class='form-control')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-lock(aria-hidden='true')
        .container-login100-form-btn
          button.login100-form-btn
            | Login
        .text-center.p-t-12
          span.txt1
            | Forgot 
          a.txt2(href='#')
            |  Username / Password?
        .text-center.p-t-136
          a.txt2(href='../register')
            h2 Just Born --> Register here!!
            .m-l-5(aria-hidden='true')
