extends layout

block content
    if  items
        
        .row
            .col-sm-6.col-md-6.col-md-offset-0
                ul.list-group

                    each val in items
                        li.list-group-item
                            span.badge.badge-primary #{val.qty}
                            strong #{val.item.item_title}
                            span.label.label-success $#{val.price}
                            div.btn-group
                                button(class='btn btn-primary btn-xs dropdown-toggle' type='button')
                                |   Action
                                span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='') Reduce by 1
                                    li
                                        a(href='') Remove all

        .row
            .col-sm-6.col-md-6.col-md-offset-0
                strong Total: #{finalPrice}
        hr

        .row
            .col-sm-6.col-md-6.col-md-offset-0
                button.btn.btn-success(type='button') Continue Shopping
            

                button.btn.btn-primary.pull-right(type='button') Checkout

    else

        .row
            .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                h1 No items in cart          

    